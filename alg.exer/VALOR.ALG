 algoritmo "valor"
 
 var
  valor: inteiro

 inicio
 
  escreva("Digite um valor: ")
  leia(valor)

    se(valor > 0)entao
     escreva("Valor positivo")
     
    senao
      se(valor < 0)entao
        escreva("Valor negativo")

      senao
        escreva("Valor é igual a zero")
      fimse
  fimse
    
 fimalgoritmo