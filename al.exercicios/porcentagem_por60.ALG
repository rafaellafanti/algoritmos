   algoritmo "porcentagem"
   
   var
   a, b: real

   inicio
   escreva("Informe um numero: ")
   leia(a)
   b <- (a*0.6)
   escreva("A multiplicaçao de", a, " por 0.6 é ", b)
   
   fimalgoritmo