   algoritmo "porcentagem"
   
   var
   a, b, p: real

   inicio
   escreva("Informe dois numeros: ")
   leia(a,b)
   p <- ((a+b)*0.45)
   escreva("A multiplicaçao de ", a, " mais " ,b, " por 0.45 é ", p)
   
   fimalgoritmo